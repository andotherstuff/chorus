{
  "name": "push-notification-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for push notifications",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "bun run scripts/test-integration.ts",
    "dev": "tsx watch src/dev-server.ts",
    "build": "tsc",
    "start": "tsx src/dev-server.ts",
    "test:endpoints": "tsx scripts/test-endpoints.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
